<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:elevation="0dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="8dp"
    app:strokeWidth="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_saved"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="19/06/2025"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:fontFamily="@font/exo2_medium"/>

            <TextView
                android:id="@+id/tv_job_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Matematika o'qituvchisi kerak"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/exo2_medium"
                android:layout_below="@id/tv_date"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:id="@+id/ll_organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_job_name"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_organization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Odil School NTM"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:fontFamily="@font/exo2_medium"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/img_official_logo"
                    android:layout_marginStart="2dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Toshkent, Yunusobod"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:fontFamily="@font/exo2_medium"
                android:layout_below="@id/ll_organization"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardCornerRadius="8dp"
                android:layout_below="@id/tv_region"
                app:cardBackgroundColor="@color/light_gray30"
                android:layout_marginTop="16dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_job"/>
                    <TextView
                        android:id="@+id/tv_experience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Tajribasiz"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/gray"
                        android:textSize="16sp"
                        android:fontFamily="@font/exo2_medium"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:id="@+id/v_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_blue"
                android:layout_marginTop="16dp"
                android:layout_below="@id/cv_experience"/>

            <TextView
                android:id="@+id/str_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_price"
                android:layout_below="@id/v_line"
                android:layout_marginTop="16dp"
                android:textColor="@color/color_blue"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/exo2_medium"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/v_line"
                android:layout_marginTop="14dp"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_wallet"/>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    tools:text="5 000 000 - 10 000 000 UZS"
                    android:textColor="@color/color_blue"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
            </LinearLayout>


        </RelativeLayout>

</com.google.android.material.card.MaterialCardView>